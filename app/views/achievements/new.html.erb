<div class="container">
 <%= form_with model: @achievement, local:true do |f| %>
 <%= f.label :title,  "Title" %>
 <%= f.text_field :title, class: "form-control" %>
 <%= f.label :description, "Description" %>
 <%= f.text_area :description, class: "form-control"%>
 <%= f.label :privacy %>
 <%= f.select :privacy, Achievement.privacies.map {|k,v| [k.split('_').first.capitalize, k] }, :prompt => 'Select One',class: "form-control"%>
 <%= f.label :featured, "Featured achievement" %>
 <%= f.check_box :featured %>
 <%= f.label :cover_image %>
 <%= f.file_field :cover_image, class: "form-control" %>

 <%= f.submit "Create Achievement", class: "btn btn-primary" %>
 
 <% end %>
</div>